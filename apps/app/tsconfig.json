{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@screens/*": ["src/screens/*"],
      "@types": ["src/types/index"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@utils": ["src/utils/index"],
      "@constants": ["src/constants/index"]
    }
  },
  "include": ["src/**/*", "App.tsx", "global.d.ts"]
}
